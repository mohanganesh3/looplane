                    item.addEventListener('click', () => {
                        const lat = parseFloat(item.dataset.lat);
                        const lon = parseFloat(item.dataset.lon);
                        const displayName = item.dataset.display;

                        input.value = displayName;

                        if (coordsInput) {
                            coordsInput.value = JSON.stringify({
                                type: 'Point',
                                coordinates: [lon, lat],
